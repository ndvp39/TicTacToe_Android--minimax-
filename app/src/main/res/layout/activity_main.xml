<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/mute_image"
        android:layout_width="58dp"
        android:layout_height="50dp"
        android:layout_marginStart="304dp"
        android:layout_marginTop="24dp"
        android:onClick="onClickMute"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/unmuted"
        tools:ignore="MissingConstraints" />

    <Space
        android:id="@+id/space0"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mute_image" />

    <ImageButton
        android:id="@+id/easy_btn"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="52dp"
        android:onClick="onClickEasy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space0"
        app:srcCompat="@drawable/easylevel"
        tools:ignore="MissingConstraints" />

    <Space
        android:id="@+id/space1"
        android:layout_width="0dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toBottomOf="@+id/easy_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/hard_btn"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:onClick="onClickHard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space1"
        app:srcCompat="@drawable/hardlevel"
        tools:ignore="MissingConstraints" />

    <Space
        android:id="@+id/space2"
        android:layout_width="0dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toBottomOf="@+id/hard_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/extreme_btn"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_marginTop="44dp"
        android:onClick="onClickExtreme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space2"
        app:srcCompat="@drawable/extremelevel"
        tools:ignore="MissingConstraints" />

    <Space
        android:id="@+id/space3"
        android:layout_width="0dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toBottomOf="@+id/extreme_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
